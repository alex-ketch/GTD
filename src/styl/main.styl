@import 'kouto-swiss'
@import 'axis'

@import './BPG Mikheil Stefane.css'
@import './BPG Nostalgia.css'

normalize()
box-sizing-reset()

// debug()
body
  font-size: 18px

article
  max-width: 700px
  margin: 0 auto

img
  width: 100%
  height: auto

p
  paragraph()
  font-size: 1em
  line-height: 1.6em

text-selection()

ul
  ul: 'ka'

h1, h2, h3, h4, h5, h6
  font-family: "BPG Mikheil Stefane"
  border-top: 1px solid black
  padding-top: .25em
  margin-top: 2em
